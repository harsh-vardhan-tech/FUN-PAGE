  <!-- Firebase CDN + Script -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-app.js";
    import { getDatabase, ref, push, onValue } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyBnwllZvZv2SXiB-__GxP8Y6D6KZx240xo",
      authDomain: "chilgoja-love-app.firebaseapp.com",
      databaseURL: "https://chilgoja-love-app-default-rtdb.firebaseio.com",
      projectId: "chilgoja-love-app",
      storageBucket: "chilgoja-love-app.appspot.com",
      messagingSenderId: "341233740750",
      appId: "1:341233740750:web:31ffece3aee37787dfd99f",
      measurementId: "G-PPMY6D9H35"
