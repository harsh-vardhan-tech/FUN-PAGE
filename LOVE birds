    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);
    const namesRef = ref(db, "names");

    document.getElementById("submitName").onclick = () => {
      let name = document.getElementById("nameInput").value;
      if (name.trim()) {
        push(namesRef, name);
        document.getElementById("nameInput").style.display = "none";
        document.getElementById("submitName").style.display = "none";
      }
    };

    onValue(namesRef, (snapshot) => {
      let data = snapshot.val();
      let list = "<h3>LeaderBoard üíï</h3><ul>";
      for (let key in data) {
        list += `<li>${data[key]}</li>`;
      }
      list += "</ul>";
      document.getElementById("namesList").innerHTML = list;
    });

    const loveBtn = document.getElementById("loveBtn");
    const hateBtn = document.getElementById("hateBtn");
    const msg = document.getElementById("msg");
    const gifContainer = document.getElementById("gifContainer");

    const loveMessages = [
      "Uffff üò≥ ye meri ada aayi re! üôàüôàüôàüôà",
      "ILU ILU ILU üíåüíûüíìüíó",
